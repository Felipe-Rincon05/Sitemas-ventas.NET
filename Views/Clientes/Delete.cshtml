@model PROYECTO_WEB.Models.cliente

@{
    ViewBag.Title = "Delete";
}

<h2 style="color: white">ELIMINAR CLIENTE</h2>

<h5 style="color:dimgrey">¿Quieres ELIMINAR este cliente?</h5>
<div style="color:white">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correo)
        </dd>

        <dt>
            Dirección
        </dt>

        <dd>
            @Html.DisplayFor(model => model.direccion)
        </dd>

        <dt>
            Estado
        </dt>
        
        <dd>
            @Html.DisplayFor(model => model.estado_c)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="ELIMINAR" class="btn btn-danger" style="border-color: transparent;" />
    }
</div>
<br />
<br />
<p class="btn btn-outline-primary">
    <a href="@Url.Action("Index")" class="btn btn-link" style="text-decoration: none; color: inherit;">Volver</a>
</p>
