@model PROYECTO_WEB.Models.cliente

@{
    ViewBag.Title = "Details";
}

<h2 style="color: white">DETALLES CLIENTE</h2>

<div style="color:white">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            NOMBRE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            CORREO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correo)
        </dd>

        <dt>
            DIRECCIÓN
        </dt>

        <dd>
            @Html.DisplayFor(model => model.direccion)
        </dd>

        <dt>
            ESTADO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.estado_c)
        </dd>

    </dl>
    <a href="@Url.Action("Edit", new { id = Model.id_c })" class="btn btn-warning" style="border-color: transparent;">Editar</a>
</div>
<br />
<br />
<p class="btn btn-outline-primary">
    <a href="@Url.Action("Index")" class="btn btn-link" style="text-decoration: none; color: inherit;">Volver</a>
</p>