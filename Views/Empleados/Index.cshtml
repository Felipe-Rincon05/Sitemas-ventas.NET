@model IEnumerable<PROYECTO_WEB.Models.empleado>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:white">EMPLEADO</h2>
<br />
<table class="table table-dark table-sm align-middle">
    <tr>
        <th class = "text-center">
            NOMBRE
        </th>
        <th class = "text-center">
            CORREO
        </th>
        <th class = "text-center">
            TELEFONO
        </th>
        <th class = "text-center">
            ESTADO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class = "text-center">
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td class = "text-center">
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td class = "text-center">
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td class = "text-center">
            @Html.DisplayFor(modelItem => item.estado_e)
        </td>
        <td class = "text-center">
            @Html.ActionLink("Editar", "Edit", new { id=item.id_e }, new { @class = "btn btn-outline-warning", style = "border-color: transparent;" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_e }, new { @class = "btn btn-outline-info", style = "border-color: transparent;" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_e }, new { @class = "btn btn-outline-danger", style = "border-color: transparent;" })
        </td>
    </tr>
}
</table>
<br />
<p class="btn btn-outline-success">
    <a href="@Url.Action("Create")" class="btn btn-link" style="text-decoration: none; color: inherit;">Nuevo empleado</a>
</p>