@model PROYECTO_WEB.Models.producto

@{
    ViewBag.Title = "Details";
}

<h2 style="color: white">DETALLES PRODUCTO</h2>

<div style="color:white">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            NOMBRE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            PRECIO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            EXISTENCIAS
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stock)
        </dd>

        <dt>
            ESTADO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.estado)
        </dd>

    </dl>
    <a href="@Url.Action("Edit", new { id = Model.id_producto })" class="btn btn-warning" style="border-color: transparent;">Editar</a>
</div>
<br />
<br />
<p class="btn btn-outline-primary">
    <a href="@Url.Action("Index")" class="btn btn-link" style="text-decoration: none; color: inherit;">Volver</a>
</p>