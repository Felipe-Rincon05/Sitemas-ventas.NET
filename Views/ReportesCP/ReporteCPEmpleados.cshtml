@model List<PROYECTO_WEB.Models.empleado>
@{
    ViewBag.Title = "ReporteCPEmpleados";
}

<h2 style="color:white;">Empleados</h2>

@using (Html.BeginForm("ReporteCPEmpleados_Click", "ReportesCP", FormMethod.Post))
{
    <div class="form-group">
        <label style="color: white;">Datos del empleado</label>
    </div>
    <div class="form-group d-flex justify-content-between">
        <div class="col-sm-6 d-flex">
            @Html.TextBox("id_emp", null, new { @class = "form-control", @placeholder = "Cedula", @autocomplete = "off" })
            <button style="border-color: transparent; --bs-btn-hover-bg: #1F618D; --bs-btn-color: #1F618D;" onclick="" type="submit" name="btn_enviar" value="Buscar Cliente" class="btn btn-outline-light"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    </div>
}

<table class="table table-dark table-sm align-middle">
    <tr>
        <th class="text-center">
            NOMBRE
        </th>
        <th class="text-center">
            CORREO
        </th>
        <th class="text-center">
            TELEFONO
        </th>
        <th class="text-center">
            ESTADO
        </th>
        <th></th>
    </tr>
    @{
        if (Model.Count() != 0 || Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.correo)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.telefono)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.estado_e)
                    </td>
                </tr>
            }
        }
    }
</table>

<a class="dropdown-item">Exportar como Excel</a>
<div style="padding:10px; color: white; text-decoration: none;">
    <a href="@Url.Action("VistaReporteEmpleados", "ReportesCP", new { id = "pdf" })" class="btn btn-danger" style="border-color: transparent;">
        Reporte PDF
    </a>
    <a href="@Url.Action("VistaReporteEmpleados", "ReportesCP", new { id = "Excel" })" class="btn btn-success" style="border-color: transparent;">
        Reporte EXCEL
    </a>
    <a href="@Url.Action("VistaReporteEmpleados", "ReportesCP", new { id = "Word" })" class="btn btn-primary" style="border-color: transparent;">
        Reporte WORD
    </a>
</div>

