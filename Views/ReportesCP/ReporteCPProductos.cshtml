@model List<PROYECTO_WEB.Models.producto>
@{
    ViewBag.Title = "ReporteCPProductos";
}

<h2 style="color:white;">Prodcutos</h2>

@using (Html.BeginForm("ReporteCPProductos_Click", "ReportesCP", FormMethod.Post))
{
    <div style="color:white;" class="form-group">
        <label style="color: white;">Datos del producto</label>
    </div>
    <div class="form-group d-flex justify-content-between">
        <div class="col-sm-6 d-flex">
            @Html.TextBox("id_prod", null, new { @class = "form-control", @placeholder = "Nombre", @autocomplete = "off" })
            <button style="border-color: transparent; --bs-btn-hover-bg: #1F618D; --bs-btn-color: #1F618D;" onclick="" type="submit" name="btn_enviar" value="Buscar Cliente" class="btn btn-outline-light"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    </div>
}

<<table class="table table-dark table-sm align-middle">
    <tr class="text-center">
        <th>
            NOMBRE
        </th>
        <th>
            PRECIO
        </th>
        <th>
            EXISTENCIAS
        </th>
        <th>
            ESTADO
        </th>
        <th></th>
    </tr>

    @{
        if (Model.Count() != 0 || Model != null)
        {
            foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.stock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>
                </tr>
            }
        }

    }
</table>

<hr style="background-color:white;">
<div style="padding:10px; color: white; text-decoration: none;">
    <a href="@Url.Action("VistaReporteProductos", "ReportesCP", new { id = "pdf" })" class="btn btn-danger" style="border-color: transparent;">
        Reporte PDF
    </a>
    <a href="@Url.Action("VistaReporteProductos", "ReportesCP", new { id = "Excel" })" class="btn btn-success" style="border-color: transparent;">
        Reporte EXCEL
    </a>
    <a href="@Url.Action("VistaReporteProductos", "ReportesCP", new { id = "Word" })" class="btn btn-primary" style="border-color: transparent;">
        Reporte WORD
    </a>
</div>

